<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
   <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
   <property name="hibernate.connection.url">jdbc:mysql://den1.mysql5.gear.host:3306/ibatestdb</property>
   <property name="hibernate.connection.username">ibatestdb</property>
   <property name="hibernate.connection.password">password</property>
   <property name="hibernate.hbm2ddl.auto">validate</property>
   <property name="show_sql">false</property>
   <property name="hibernate.current_session_context_class">thread</property>

      <mapping class="com.javacodegeeks.snippets.enterprise.hibernate.model.BookEntity"/>
      <mapping class="com.javacodegeeks.snippets.enterprise.hibernate.model.ClientEntity"/>
      <mapping class="com.javacodegeeks.snippets.enterprise.hibernate.model.CardEntity"/>
</session-factory>
</hibernate-configuration>