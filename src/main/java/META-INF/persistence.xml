<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.javacodegeeks.snippets.enterprise.hibernate.model.BookEntity</class>
        <class>com.javacodegeeks.snippets.enterprise.hibernate.model.CardEntity</class>
        <class>com.javacodegeeks.snippets.enterprise.hibernate.model.ClientEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://den1.mysql5.gear.host:3306/ibatestdb"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
